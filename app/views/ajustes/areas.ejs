<%- include('../_templates/header.template.ejs') %>
   <%- include('../_templates/navbar.template.ejs') %>
      <%- include('../_templates/sidebar.template.ejs') %>
         <%- include('../_templates/body_top.template.ejs') %>
            <div class="app-title">
               <div>
                  <h1><i class="fab fa-codepen"></i> Areas</h1>
                  <p>Administraci&oacute;n de Areas Disponibles</p>
               </div>
               <ul class="app-breadcrumb breadcrumb">
                  <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
                  <li class="breadcrumb-item"><a href="#">Ajustes</a></li>
                  <li class="breadcrumb-item"><i>Areas</i></li>
               </ul>
            </div>
            <div class="row">
               <div class="col-md-8">
                  <div class="tile">
                     <div class="tile-body">
                        <table id="tbl_data" class="table table-hover table-sm">
                           <thead>
                              <tr>
                                 <th scope="col">#</th>
                                 <th scope="col">Area</th>
                                 <th scope="col">Alias</th>
                                 <th scope="col">Acciones</th>
                              </tr>
                           </thead>
                           <tbody id="tbl_area_data">

                           </tbody>
                        </table>
                     </div>
                  </div>
               </div>
               <div class="col-md-4">
                  <div class="tile">
                     <div class="tile-body">
                        <form id="area_form">
                           <div class="form-group">
                              <input type="text" class="form-control" id="id" name="id" readonly placeholder="id">
                           </div>
                           <div class="form-group">
                              <label for="area">Area</label>
                              <input type="text" name="area" class="form-control" id="area" required placeholder="Area"
                                 autofocus>
                           </div>
                           <div class="form-group">
                              <label for="alias">Alias</label>
                              <input type="text" name="alias" class="form-control" id="alias" required
                                 placeholder="Alias">
                           </div>
                           <div class="form-group">
                              <button class="btn btn-secondary btn-block" type="button" id="procesar"> <i
                                    class="far fa-paper-plane"></i>
                                 Procesar</button>
                           </div>
                        </form>
                     </div>
                  </div>
               </div>
            </div>

            <%- include('../_templates/body_bottom.template.ejs') %>
               <script src="/ajax/areas.ajax.js"></script>
               <%- include('../_templates/footer.template.ejs') %>